pipeline {

    agent any

    stages {
        stage('1-Test') {
            steps {
               echo "Start"
               echo "Doing something.."
               echo "End"
            }
        }
        stage("Check Preconditions") {
            if (!continueBuild) {
               currentBuild.result = 'ABORTED'
               error('Stopping earlyâ€¦')
            }
        }
        stage('2-Build') {
            steps {
                sh 'docker build -t botlab4 .'
                sh 'docker run -t botlab4'
            }
        }
    }
}
